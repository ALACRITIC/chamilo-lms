{% extends "::layout.html.twig" %}

{% block page_title %}
    {{ 'Settings' | trans }}
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block page_content %}
    <ul>
    {% for namespace in schemas|keys %}
        <li>
            <img src="{{ asset('bundles/chamilocore/img/icons/32/' ~ namespace ~'.png') }}" />
            <a href="{{ path('chamilo_platform_settings', { 'namespace': namespace }) }}">
            {{ namespace | capitalize | trans }}
            </a>
        </li>
    {% endfor %}
    </ul>
{% endblock%}
