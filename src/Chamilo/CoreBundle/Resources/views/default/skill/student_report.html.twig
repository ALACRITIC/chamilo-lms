{% if allowSkillsTool %}
    <div class="btn-group">
        <a class="btn btn-default" href="{{ url('web.main') }}social/skills_wheel.php">{{ 'SkillsWheel' | trans }}</a>
    </div>
{% endif %}

<h1 class="page-header">{{ 'SkillsAcquired' | trans }}</h1>

{% if rows %}
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Skill' | trans }}</th>
                <th>{{ 'Date' | trans }}</th>
                <th>{{ 'Course' | trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for row in rows %}
                <tr>
                    <td>{{ row.skillName }}</td>
                    <td>{{ row.achievedAt }}</td>
                    <td><img src="{{ row.courseImage }}" alt="{{ row.courseName }}" width="32"> {{ row.courseName }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <div class="alert alert-info">
        {{ 'NoResults' | trans }}
    </div>
{% endif %}
