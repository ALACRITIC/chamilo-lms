{% extends "@ChamiloTheme/Layout/base-layout.html.twig" %}

{% block page_content %}
    {#  Left column #}

    <div class="col-md-3 menu-column">
        {% block chamilo_left_column %}

            {% if app.user is not null and is_granted('IS_AUTHENTICATED_FULLY') %}
                {{ render(controller('ChamiloThemeBundle:Sidebar:userPanel')) }}
                {#{{ render(controller('ChamiloThemeBundle:Sidebar:searchForm')) }}#}
            {% endif %}

            {# Sidebar menu #}
            {{ render(controller('ChamiloThemeBundle:Sidebar:menuKnp', {'request' : app.request })) }}

            {# Skill block see SkillBlockService.php #}
            {#{{ sonata_block_render({'type': 'chamilo_core.block.skill'}) }}#}

        {% endblock %}
    </div>

    {#  Right column #}
    <div class="col-md-9">
        {% block chamilo_right_column %}
            {% include '@ChamiloCore/breadcrumb.html.twig' %}

            <section class="content">
                {# Flash messages #}
                {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}

            {% autoescape false %}
                {{ content }}
            {% endautoescape %}
            </section>
        {% endblock %}
    </div>
{% endblock %}
