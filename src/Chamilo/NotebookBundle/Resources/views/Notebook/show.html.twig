{% extends "ChamiloCoreBundle::layout_one_col.html.twig" %}
{% block content %}

    <h2>{{ notebook.name }}</h2>

    {{ notebook.description | raw }}

    <div class="box box-solid">
        <div class="box-header">
            <i class="fa fa-info-circle"></i>
            <h3 class="box-title">{{ 'Description' | trans }}</h3>
        </div><!-- /.box-header -->

        <div class="box-body">
            <dl class="dl-horizontal">
                <dt>{{ 'Creator' | trans }}</dt>
                <dd>{{ notebook.resourceNode.creator.username }}</dd>
                <dt>{{ 'CreatedAt' | trans }}</dt>
                <dd>{{ notebook.resourceNode.createdAt | format_datetime }}</dd>
                <dt>{{ 'UpdatedAt' | trans }}</dt>
                <dd>{{ notebook.resourceNode.updatedAt | format_datetime }}</dd>
                <dt>{{ 'Links' | trans }}</dt>
                {% for link in notebook.resourceNode.links %}
                    {% if link.course %}
                        <dd> {{ 'Course' | trans }} : {{ link.course.title }}
                            ({{ link.course.code }})
                        </dd>
                    {% endif %}
                {% endfor %}
            </dl>
        </div><!-- /.box-body -->
    </div>

{% endblock %}
